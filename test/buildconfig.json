{
	"files": ["./src/index.ts"],
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"listEmittedFiles": false,
		"noImplicitAny": true,
		"rootDir": "./src",
		"sourceMap": true,
		"module": "es2020",
		"outDir": "./dist/esm",
		"moduleResolution": "node",
		"target": "es2020",
		"pretty": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist/types",
		"skipLibCheck": false,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"removeComments": false
	},
	"compileOnSave": false,
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"cjs": {
		"compilerOptions": {
			"target": "es2017",
			"module": "commonjs",
			"outDir": "./dist/cjs",
			"declaration": false,
			"declarationMap": false,
			"declarationDir": null
		}
	}
}
